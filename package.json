{
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r build",
    "prepare": "husky",
    "release": "pnpm build && changeset publish",
    "version-packages": "changeset version"
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.md": "prettier --write",
    "*.{ts,tsx,js}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "proseWrap": "always",
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@changesets/cli": "2.27.7",
    "husky": "9.0.11",
    "lint-staged": "15.2.7",
    "prettier": "3.3.2",
    "sort-package-json": "2.10.0"
  },
  "packageManager": "pnpm@9.5.0"
}
